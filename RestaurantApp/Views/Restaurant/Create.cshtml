@model RestaurantApp.Restaurant.Restaurant

<h2>Add New Restaurant</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label for="Location">Location:</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div>
        <label for="CuisineType">Cuisine Type:</label>
        <input asp-for="CuisineType" class="form-control" />
        <span asp-validation-for="CuisineType" class="text-danger"></span>
    </div>
    <div>
        <label for="Rating">Rating:</label>
        <input asp-for="Rating" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div style="display: flex; gap: 10px; margin-top: 20px;">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>